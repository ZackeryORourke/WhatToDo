<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.apple.whattodo.EventController.EventFeed">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/title"
            android:layout_width="601dp"
            android:layout_height="@dimen/logo_w_h"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/capriola"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="616dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="@font/capriola"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="525dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="@font/capriola"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/btn_Home"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Return To Feed"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/add_Calender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Add Event To My Calender"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/notify_Me"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Chat With Others Going"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/purchase"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="Purchase Tickets"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"></Button>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
